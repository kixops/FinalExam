@model IEnumerable<ASP_FinalExam_Net6.Models.Department>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "DepartmentList";
}


<h1>Departmen</h1>


<p>
    <a class="btn btn-primary" asp-action="AddEditDepartment">Create New Department</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeCount)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeCount)
                </td>
                <td>
                    <a asp-action="AddEditDepartment" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DepartmentDetail" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                    @*<a asp-action="DeleteDepartment" class="btn btn-outline-danger btn-danger" asp-route-id="@item.Id">Delete</a>*@
                    @*@Html.ActionLink("Edit", "AddEditAutomobile", new { id = item.CompanyId }) |
                @Html.ActionLink("Details", "AutomobileDetail", new { id = item.CompanyId }) |
                @Html.ActionLink("Delete", "DeleteAutomobile", new { id = item.CompanyId })*@
                </td>
            </tr>
        }
    </tbody>
</table> 